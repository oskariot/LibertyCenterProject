<% title 'Book' %>
<div class="page-header">
  <h1>Book: "<%= @book.title %>"</h1>
</div>

<div class="row">
  <div class=".col-md-1 my">
    <div class="mytext">
      <img class="my" src= <%= @book.photo_url %> align="left">
      <strong><%= @book.title %></strong><br>
      <a href=<%= author_path(@book.author.id) %>><%= @book.author.name %></a>
      <br><br>
      <%= @book.about %>
    </div>
  </div>
</div>

<div class="row">
  <div class="mytext">
    <%= link_to 'View all Books', books_path %><br>
    <%= link_to 'Book on amazon.com', @book.amazon_url %>
  </div>
</div>